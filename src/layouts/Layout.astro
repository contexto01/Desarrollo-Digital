---
import '@fontsource/poppins'
import '@fontsource/anton'
import Footer from '../components/Footer.astro'
import NavBar from '../components/NavBar.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/LogoSinFondo.svg" />
    <meta
      name="description"
      content="Una página que te brinda soluciones digitales por medio de páginas web. Contáctanos para obtener una página web y así impulsar tu negocio."
    />
    <meta
      name="keywords"
      content="soluciones digitales, páginas web, desarrollo web, impulsar negocio, contacto"
    />
    <meta name="author" content="Desarrollo Digital" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Una página que te brinda soluciones digitales por medio de páginas web. Contáctanos para obtener una página web y así impulsar tu negocio."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://desarrollodigital.netlify.app/" />
    <meta
      property="og:image"
      content="https://desarrollodigital.netlify.app/Desarrollo_Digital.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Una página que te brinda soluciones digitales por medio de páginas web. Contáctanos para obtener una página web y así impulsar tu negocio."
    />
    <meta
      name="twitter:image"
      content="https://desarrollodigital.netlify.app/Desarrollo_Digital.png"
    />
    <meta
      name="google-site-verification"
      content="4vBz1cxUN-EK9juh2Lt6HTrO7rBTr4AUT_MHPFTLIbo"
    />
    <title>{title}</title>
  </head>
  <body>
    <!-- <Header /> -->
    <NavBar />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  html {
    h1,
    h2,
    h3 {
      font-family: 'Anton', sans-serif;
    }

    h2,
    h3 {
      font-size: 2.25rem /* 36px */;
      line-height: 2.5rem /* 40px */;
      font-weight: 500;
    }

    body::-webkit-scrollbar {
      width: 12px; /* width of the entire scrollbar */
    }

    body::-webkit-scrollbar-track {
      @apply -bg-color-primary;
    }

    body::-webkit-scrollbar-thumb {
      @apply -bg-color-secondary rounded-full bg-opacity-50;
    }

    body {
      font-family: 'Poppins', sans-serif;
      font-weight: 500;
      max-width: 1200px;
      margin: 0 auto;
      @apply -text-color-secondary;
      padding: 0 1rem;
    }
    scroll-behavior: smooth;
    @apply -bg-color-primary;
  }
</style>
